{
  "compilerOptions": {
    "target": "ES2021",                      
    "module": "CommonJS",                   
    "declaration": true,                    
    "declarationMap": true,                 
    "sourceMap": true,                      
    "outDir": "dist",                       
    "strict": true,                         
    "moduleResolution": "node",            
    "esModuleInterop": true,                
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src/**/*"],                  
  "exclude": ["node_modules", "dist", "**/*.test.ts"] 
}
